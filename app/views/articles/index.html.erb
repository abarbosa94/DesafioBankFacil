<h1>Ultimos posts</h1>
 
<table>
  <tr>
    <th>Titulo</th>
    <th>Post</th>
  </tr>
  <% @articles.order(:id).reverse_order.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Visualizar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td><%= link_to 'Excluir post', article_path(article),
              method: :delete,
              data: { confirm: 'Voce tem certeza ?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Novo Post !', new_article_path %>